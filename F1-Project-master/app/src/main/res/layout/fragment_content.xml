<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ContentFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020 F1 Races"
        android:textSize="32dp"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_race1"
        android:text="RACE 1"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_race2"
        android:text="RACE 2"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_race1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_race3"
        android:text="RACE 3"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_race2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_race4"
        android:text="RACE 4"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_race3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_race5"
        android:text="RACE 5"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_race4"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:menu="@menu/navigation_bar"
        app:itemTextColor="@android:color/black"
        app:itemIconSize="28dp"
        app:itemIconTint="@android:color/black"/>
</RelativeLayout>